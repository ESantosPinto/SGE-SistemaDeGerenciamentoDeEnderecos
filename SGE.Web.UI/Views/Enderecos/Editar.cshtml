@model SGE.Aplicacao.DTOs.EnderecoDTO

@{
    ViewData["Title"] = "Editar Endereço";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label for="Logradouro">Logradouro</label>
        <input type="text" class="form-control" id="Logradouro" name="Logradouro" value="@Model.Logradouro" required />
    </div>
    <div class="form-group">
        <label for="Bairro">Bairro</label>
        <input type="text" class="form-control" id="Bairro" name="Bairro" value="@Model.Bairro" required />
    </div>
    <div class="form-group">
        <label for="Cidade">Cidade</label>
        <input type="text" class="form-control" id="Cidade" name="Cidade" value="@Model.Cidade" required />
    </div>

    <button type="submit" class="btn btn-primary">Atualizar</button>
</form>









