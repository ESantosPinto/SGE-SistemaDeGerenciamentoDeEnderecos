@{
    ViewData["Title"] = "Endereços";
}

@* Obtendo o login do usuário da ViewData *@
@{
    var usuarioLogin = ViewData["Usuario"] as SGE.Aplicacao.DTOs.UsuarioDTO; // Garantir que o valor não seja nulo
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Centraliza o conteúdo na tela */
        .content-container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f4f4f4;
        }

        .address-card {
            width: 100%;
            max-width: 800px;
        }

        .table-container {
            margin-top: 30px;
            width: 100%;
            max-width: 800px;
        }
    </style>
</head>
<body>
    <div class="content-container">
        <div class="address-card">
            <h3 class="text-center">Meus Endereços</h3>

            <!-- Botão de Cadastro de Novo Endereço -->
            <div class="d-flex justify-content-end">
                <a href="@Url.Action("Create", "Enderecos", usuarioLogin)" class="btn btn-success">Cadastrar Novo Endereço</a>
            </div>

            <!-- Tabela de Endereços Cadastrados -->
            <div class="table-container">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Cep</th>
                            <th scope="col">Logradouro</th>
                            <th scope="col">Complemento</th>
                            <th scope="col">Bairro</th>
                            <th scope="col">Cidade</th>
                            <th scope="col">Uf</th>
                            <th scope="col">Número</th>
                            <th scope="col">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var endereco in Model)
                        {
                            <tr>
                                <td>@endereco.Cep</td>
                                <td>@endereco.Logradouro</td>
                                <td>@endereco.Complemento</td>
                                <td>@endereco.Bairro</td>
                                <td>@endereco.Cidade</td>
                                <td>@endereco.Uf</td>
                                <td>@endereco.Numero</td>
                                <td>
                                    <!-- Botões de Ação -->
                                    <a href="@Url.Action("Editar", "Enderecos", new { id = endereco.Id })" class="btn btn-warning btn-sm">Editar</a>
                                    <a href="@Url.Action("Deletar", "Enderecos", new { id = endereco.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Tem certeza que deseja excluir este endereço?');">Excluir</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

     

        @* Verificando se o login do usuário está presente antes de renderizar o botão *@
        @if (!string.IsNullOrEmpty(usuarioLogin.UsuarioLogin))
        {
            <a href="@Url.Action("ExportarCSV", "Enderecos", new { usuarioLogin = usuarioLogin })" class="btn btn-success">
                Exportar CSV
            </a>
        }
        else
        {
            <p class="text-danger">O login do usuário não foi encontrado.</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
